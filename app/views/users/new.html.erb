
<div class="container">
	<div class="white-tainer">
		<div class="form-box">
			<h3>Welcome, New User</h3>
			<br>
			<%= simple_form_for @user do |f| %>
			  <%= f.input :first_name, :as => :string %>
				<%= f.input :last_name, :as => :string %>
				<%= f.input :user_name, :as => :string %>
				<%= f.input :email, :as => :string, :type => :email  %>
			  <%= f.input :password %>
			  <%= f.input :is_prof, :as => :hidden, :input_html => { :value => false } %>
			  <%= f.button :submit %>
			<% end %>
		</div>
	</div>
</div>
